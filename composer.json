{
  "name": "pivotal/api-authentication",
  "description": "Ahoy! - A package to implement JWT into Voyager",
  "keywords": [
    "laravel",
    "voyager",
    "frontend"
  ],
  "license": "MIT",
  "type": "metapackage",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Pivotal Agency",
      "homepage": "http://pivotalagency.com.au",
      "email": "tech@pivotalagency.com.au"
    }
  ],
  "require": {
    "laravel/framework": "5.5.*",
    "tcg/voyager": "^1.0",
    "tymon/jwt-auth": "^0.5.12"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7"
  },
  "autoload": {
    "classmap": [],
    "psr-4": {
      "Pivotal\\ApiAuthentication\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Pivotal\\ApiAuthentication\\Test\\": "tests"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Tymon\\JWTAuth\\Providers\\JWTAuthServiceProvider",
        "Pivotal\\ApiAuthentication\\Providers\\AuthenticationServiceProvider"
      ],
      "aliases": {
        "JWTAuth": "Tymon\\JWTAuth\\Facades\\JWTAuth",
        "JWTFactory": "Tymon\\JWTAuth\\Facades\\JWTFactory"
      }
    }
  },
  "scripts": {
    "test": "phpunit",
    "post-root-package-install": [
      "@php artisan vendor:publish --provider='Tymon\\JWTAuth\\Providers\\JWTAuthServiceProvider'",
      "@php artisan jwt:generate"
    ]
  }
}
